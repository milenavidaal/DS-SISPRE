                    </MenuItem.Icon>

                </MenuItem>

                <MenuItem Header="_Abrir"/>
                <Separator/>
                <MenuItem Header="_Sair" Click="btn_sair_Click"/>
            </MenuItem>
            <MenuItem Header="_Sobre">
                <MenuItem x:Name="btn_versao" Header="_Versão" Click="btn_versao_Click"/>
            </MenuItem>

        </Menu>
        <TextBox Grid.ColumnSpan="3" HorizontalAlignment="Left" Height="29" Margin="90,-180,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Height="29" Margin="286,-100,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="105" Grid.Column="2"/>
