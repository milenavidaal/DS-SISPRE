        <TextBox x:Name="txtCpf" HorizontalAlignment="Left" Height="23" Margin="78,-54,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="218" Grid.ColumnSpan="3"/>
        <TextBox x:Name="txtRg" HorizontalAlignment="Left" Height="23" Margin="213,-54,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="166" Grid.Column="2"/>
