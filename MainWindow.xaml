        <PasswordBox x:Name="txtSenha" HorizontalAlignment="Left" Margin="24,168,0,0" VerticalAlignment="Top" Width="211" Grid.ColumnSpan="2" Grid.Column="1" Height="23" Grid.RowSpan="2"/>
