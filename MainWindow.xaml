        <RadioButton Content="Funcionário" Grid.Column="2" HorizontalAlignment="Left" Margin="147,-8,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Separator HorizontalAlignment="Left" Height="40" Margin="15,19,0,0" VerticalAlignment="Top" Width="691" Grid.ColumnSpan="3" FontSize="16"/>
